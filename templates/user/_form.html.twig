<div class="container">
    <div class="row">
        <div class="col-md-10 ml-md-auto">
            <div class="card bg-light mb-3 mt-5" style="width: 800px">
                <div class="card-body">
                    <div class="card-header mb-3">Usuario</div>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-btn fa-user"></i>Guardar
                            </button>
                            <a class="btn btn-secondary" href="{{ path('negocio_index') }}" role="button">Cancelar</a>
                        </div>
                    </div>

                    {{ form_rest(form) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>